<Context
    path="/TeraNavi"
    reloadable="true"
    docBase="/vagrant_data/TeraNavi/target/TeraNavi"
	aliases="/imgPath=/tmp">
    <Resource
        name="jdbc/mysql"
        auth="Container"
        type="javax.sql.DataSource"
        username="TERA_NAVI"
        password="tera"
        driverClassName="net.sf.log4jdbc.DriverSpy"
        url="jdbc:log4jdbc:mysql://localhost/tera_db"
        validationQuery="SELECT 1"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        defaultAutoCommit="false"
    />
</Context>
